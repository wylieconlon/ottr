<!DOCTYPE html>
<html>
<head>
	<title><%= @title %></title>
	<%= csrf_meta_tag %>
	<%= render 'layouts/stylesheets' %>
	<%= javascript_include_tag :defaults %>
	<!-- The above Javascript is used to 'Fake' the DELETE request, 
		since Web Browsers cannot send DELETE requests natively -->
</head>
<body>
	<%= render 'layouts/header' %>

	<section>
		<% flash.each do |key, value| %>
			<%= content_tag(:div, value, :class => "flash #{key} container") %>
		<% end %>
		<% if is_not_splashpage? %><div class="container"><% end %>
		<%= yield %>
		<% if is_not_splashpage? %></div><% end %>
		
	</section>

	<%= render 'layouts/footer' %>
	<%= debug(params) if Rails.env.development? %>
	</div>
</body>
</html>
