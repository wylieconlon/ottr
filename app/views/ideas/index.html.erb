<h1>Listing ideas</h1>

<% if @ideas.nil? %>
<p>Nothing to Do! Float Something!</p>
<% else %>
<table>
  <tr>
    <th>What</th>
    <th>Where</th>
    <th>When</th>
    <th>Who</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= idea.what %></td>
    <td><%= idea.where %></td>
    <td><%= idea.when %></td>
    <td><%= User.find(idea.organizer).email %></td>
    <td><%= link_to 'Show', idea %></td>
    <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
    <td><%= link_to 'Destroy', idea, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<% end %>
<%= link_to 'New Idea', new_idea_path %>
